{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
        </tbody>
    </table>

    <p>Séries dans lesquelles <b>{{ actor.name }}</b> est présent(e) :</p>
    <ul>
    {% for program in actor.programs %}
        <li><a href="{{ path('program_program_show', { program: program.id }) }}">{{ program.title }}</a></li>
    {%  endfor %}
    </ul>

    <a href="{{ path('app_actor_index') }}">back to list</a>

    <a href="{{ path('app_actor_edit', {'id': actor.id}) }}">edit</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
