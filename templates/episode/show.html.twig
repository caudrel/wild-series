{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ episode.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ episode.title }}</td>
        </tr>
        <tr>
            <th>Number</th>
            <td>{{ episode.number }}</td>
        </tr>
        <tr>
            <th>Synopsis</th>
            <td>{{ episode.synopsis }}</td>
        </tr>
        </tbody>
    </table>

        <h2>Commentaires</h2>
        {% for comment in comments %}
            <h6>Note : {{ comment.rate }}/10</h6>
            <p>{{ comment.comment }}</p>
        {% endfor %}



        {% if app.user %}
            <tr>
                <th>
                    <a href="{{ path ('app_comment_new', {'id': episode.id}) }}">Ajouter un commentaire</a>
                </th>
            </tr>
        {% endif %}



    <a href="{{ path('app_episode_index') }}">back to list</a>

    <a href="{{ path('app_episode_edit', {'slug': episode.slug}) }}">edit</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
