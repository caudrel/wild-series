{% extends 'base.html.twig' %}

{% block title %}Serie number: {{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
    <img class="align-self-start mr-3" src="/build/images/{{ program.poster }}" alt="{{ program.title }} poster">
    <div class="media-body">
    <h1 class="mt-0">{{ program.title }}</h1>
    <p>Category : {{ program.category.name }}</p>

    <h2>Saison : {{ season.number }}</h2>
    <p>Description : {{ season.description }}</p>
    <ul>
        <h2>Tous les épisodes :</h2>
        {% if season.episodes is empty %}
        <p>Il n'y a pas d'épisodes pour le moment !</p>
        {%  endif %}

        {% for episode in season.episodes %}
            <li>
                <a href="{{ path ("program_episode_show", { program: program.id, season: season.id, episode: episode.id }) }}" >Episode #{{ episode.number }} . {{ episode.title }}</a>
                <p>Titre : {{ episode.title }}</p>
                <p>Synopsis : {{ episode.synopsis }}</p>
            </li>
        {% endfor %}
    </ul>



{% endblock %}