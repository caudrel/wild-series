{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>

            <p>Saison #{{ season.number }}</p>
            <p>Numéro de l'épisode :{{ episode.number }}</p>
    <p>Titre de l'épisode : {{ episode.title }}</p>
    <p>Synopsis : {{ episode.synopsis }}</p>

    <a href="{{ path('program_season_show', { program: program.id, season: season.id }) }}">
        Retour à la saison
    </a>


{% endblock %}